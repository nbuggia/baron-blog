<section id="posts">
	<% for article in articles[0...1] %>
	<post>
		<header>
			<h1><a href="<%= article.path %>"><%= article.title %></a></h1>
			<div class="post-details">
				<time><%= article.date %></time> &bull; 
				<a href="javascript:void(0)" onclick="read_later('<%= article.url %>');">Read Later</a>
			</div>
		</header>
		<%= article.body %>
	</post>
	<% end %>
</section>